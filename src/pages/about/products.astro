---
import AboutLayout from '../../layouts/AboutLayout.astro';
---

<AboutLayout title="General Contents">
  <h1>General Contents</h1>
  <p>Welcome to the dashboard. Select a destination type from the sidebar.</p>
  
  <div class="card-grid">
    <div class="card">Latest Updates</div>
    <div class="card">Stats</div>
  </div>
</AboutLayout>

<style>
  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }
  .card {
    border: 1px solid;
    padding: 1.5rem;
    border-radius: 8px;
  }
</style>