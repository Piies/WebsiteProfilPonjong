---
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import HeaderLink from './HeaderLink.astro';
import whatsappIcon from '../assets/whatsapp-svgrepo-com.svg';
import instaIcon from '../assets/instagram-logo-facebook-2-svgrepo-com.svg';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">Tentang Ponjong</HeaderLink>
			<HeaderLink href="/blog">Tur Mampirro</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://twitter.com/astrodotbuild" target="_blank">
				<span class="sr-only">Follow Astro on Twitter</span>
				<Image src={instaIcon} alt="Instagram" width={32} height={32}/>
			</a>
			<a href="https://twitter.com/astrodotbuild" target="_blank">
				<span class="sr-only">Follow Astro on Twitter</span>
				<Image src={whatsappIcon} alt="whatsapp" width={32} height={32}/>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0.5em 2em 0em 2em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		background-color: var(--dark-spruce);
		position: sticky;
		top: 0;
		z-index: 100;
		height: auto;
	}
	h2 {
		margin: 0;
		font-size: 2em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		font-family: 'Playfair Display Variable Italic';
		color: var(--dry-sage);
		padding-bottom: 0;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1.5em 0.5em 1em 0.5em;
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--dry-sage);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
