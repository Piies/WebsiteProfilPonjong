---
const { images } = Astro.props;
---

<div class="carousel-container">
  <div class="carousel-track" id="carousel-track">
    {images.map((img) => (
      <div class="carousel-slide">
        
        <img src={img.src} alt={img.alt} />
        <div class="carousel-overlay">
          <div class="content-box">
            <h2 class="tagline">{img.tagline}</h2>
            <p class="description">{img.desc}</p>
          </div>
        </div>
      </div>
    ))}
  </div>

  <button class="nav-btn prev" id="prev-btn">❮</button>
  <button class="nav-btn next" id="next-btn">❯</button>
</div>

<style>
  .carousel-container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .carousel-track {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    /* Hide scrollbar */
    scrollbar-width: none; 
    -ms-overflow-style: none;
  }

  .carousel-slide {
    flex: 0 0 100%;
    scroll-snap-align: center;
    position: relative; /* Penting untuk posisi overlay */
    height: 80vh; /* Sesuaikan tinggi carousel kamu */
  }

  .carousel-slide img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    /* Overlay gelap agar teks terbaca */
    filter: brightness(0.6); 
  }

  .carousel-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    padding: 20px;
    box-sizing: border-box;
    pointer-events: none; /* Agar klik tetap tembus ke tombol nav */
  }

  .content-box {
    max-width: 700px;
    font-family: 'Poppins', sans-serif;
    background-color: color-mix(in srgb, var(--dark-spruce), transparent 60%);
  }

  .tagline {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    margin: 10px 0;
    opacity: 0.9;
    color: var(--ocean-pearl);
    text-shadow: 2px 2px 10px var(--palm-leaf);
  }

  .description {
    font-size: 1.1rem;
    font-style: italic;
    opacity: 0.9;
    color: var(--ocean-pearl);
  }

  .nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    padding: 10px;
    cursor: pointer;
    z-index: 10;
  }

  .prev { left: 10px; }
  .next { right: 10px; }
</style>

<script>
  // Client-side script to handle button clicks
  const track = document.getElementById('carousel-track');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');

  prevBtn.addEventListener('click', () => {
    track.scrollBy({ left: -track.offsetWidth, behavior: 'smooth' });
  });

  nextBtn.addEventListener('click', () => {
    track.scrollBy({ left: track.offsetWidth, behavior: 'smooth' });
  });
</script>