---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';
import BaseHead from '../components/BaseHead.astro';

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={'description'} />
  </head>
  <body>
    
    <Header />

    <div class="middle-wrapper">
      <Sidebar />
      
      <main class="content">
        <slot />
      </main>
    </div>

    <Footer />

  </body>
</html>

<style>
  /* Reset basic margins so layout hits the edges */
  body {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh; /* Pushes footer down on short pages */
  }

  /* Only this specific div uses Flexbox to create columns */
  .middle-wrapper {
    display: flex;
    flex: 1; /* This makes the middle section grow to fill empty vertical space */
    width: 100%;
  }

  .content {
    flex-grow: 1; /* Content takes up all remaining width */
    padding: 2rem;
  }

  /* Optional: Mobile Responsiveness */
  @media (max-width: 768px) {
    .middle-wrapper {
      flex-direction: column; /* Stack sidebar on top of content on mobile */
    }
    .sidebar {
      width: 100%;
      border-right: none;
      border-bottom: 1px solid #ddd;
    }
  }
</style>